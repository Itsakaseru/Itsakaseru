# Itsakaseru - SKHD
# Version 1.0.0

# Yabai Shortcuts
# ----

# Restart Yabai
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# Focus Window
alt - i : yabai -m window --focus north
alt - k : yabai -m window --focus south
alt - j : yabai -m window --focus west
alt - l : yabai -m window --focus east

# Fullscreen & Native Fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen

# Display focus
shift + alt - l : yabai -m display --focus next
shift + alt - j : yabai -m display --focus prev

# Rotate
alt - r : yabai -m space --rotate 90

# Swap Window
ctrl + alt - i : yabai -m window --swap north
ctrl + alt - k : yabai -m window --swap south
ctrl + alt - j : yabai -m window --swap west
ctrl + alt - l : yabai -m window --swap east

# Move Window to Space
ctrl + shift - l : yabai -m window --space next
ctrl + shift - j : yabai -m window --space prev
